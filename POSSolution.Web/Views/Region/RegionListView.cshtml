@model POSSolution.Web.Models.Region.RegionListViewModel;
@using POSSolution.Utilities.Extensions;
@{
    ViewData["Title"] = "RegionListView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-home mr-1"></i>
        Danh Sách Khu Vực Trong Cửa Hàng
        <div class="mt-2 d-inline-block">
            <div>
                <a class="btn btn-success" asp-action="ShowAddNewPage" asp-controller="Shop">
                    <i class="fas fa-plus mr-1"></i>
                    Thêm Mới
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Mã Khu</th>
                        <th>Cửa Hàng</th>
                        <th>Người Tạo</th>
                        <th>Ngày Tạo</th>
                        <th>Ngày Sửa</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var region in Model.regions)
                    {
                        var shopFullName = @region.shop?.name + " - " + @region.shop.address;
                        <tr>
                            <td>@region.name</td>
                            <td>@region.code</td>
                            <td>@shopFullName</td>
                            <td>@region.createUser</td>
                            <td>@region.createDate.ToTableDisplayDate()</td>
                            <td>@region.updateDate.ToTableDisplayDate()</td>
                            <td>
                                <form>
                                    <div class="d-flex">
                                        <a class="btn btn-success mr-1" asp-route-shopId="@region.regionId" asp-action="ShowEditShop">
                                            <i class="far fa-edit mr-1"></i>
                                            Sửa
                                        </a>
                                        <a class="btn btn-danger mr-1" asp-action="DeleteShop" asp-controller="Shop" asp-route-shopId="@region.regionId">
                                            <i class="far fa-trash-alt mr-1"></i>
                                            Xóa
                                        </a>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
