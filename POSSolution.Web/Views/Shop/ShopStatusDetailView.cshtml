@model POSSolution.Web.Models.Shop.ShopStatusDetailViewModel;
@{
    ViewData["Title"] = "ShopStatusDetailView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-home mr-1"></i>
        Trạng Thái Cửa Hàng
    </div>
    <div class="card-body">
        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="small mb-1">Tên Trạng Thái</label>
                <input class="form-control" value="@Model.name" asp-for="@Model.name" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary mt-1" asp-action="InsertShopStatus" asp-controller="ShopStatus">Xác Nhận Lưu</button>
                <button class="btn btn-dark ml-1 mt-1 d-inline-block" asp-action="Index" asp-controller="ShopStatus">Thoát</button>
            </div>
        </form>
    </div>
</div>

