@model POSSolution.Web.Models.Shop.ShopStatusListViewModel;
@using POSSolution.Utilities.Extensions;
@{
    ViewData["Title"] = "ShopStatusListView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-home mr-1"></i>
        Các Trạng Thái Quán
        <div class="mt-2 d-inline-block">
            <div>
                <a class="btn btn-success" asp-action="ShowAddNewPage" asp-controller="ShopStatus">
                    <i class="fas fa-plus mr-1"></i>
                    Thêm Mới
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Người Tạo</th>
                        <th>Ngày Tạo</th>
                        <th>Ngày Sửa</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var status in Model.ShopStatuses)
                    {
                        <tr>
                            <td>@status.statusName</td>
                            <td>@status.createUser</td>
                            <td>@status.createDate.ToTableDisplayDate()</td>
                            <td>@status.updateDate.ToTableDisplayDate()</td>
                            <td>
                                <form>
                                    <div class="d-flex">
                                        <a class="btn btn-success mr-1" asp-route-shopId="@status.statusId" asp-action="ShowEditShop">
                                            <i class="far fa-edit mr-1"></i>
                                            Sửa
                                        </a>
                                        <a class="btn btn-danger mr-1" asp-action="DeleteShop" asp-controller="Shop" asp-route-shopId="@status.statusId">
                                            <i class="far fa-trash-alt mr-1"></i>
                                            Xóa
                                        </a>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                    <!--TODO: Add form for edit or delete user-->
                </tbody>
            </table>
        </div>
    </div>
</div>

